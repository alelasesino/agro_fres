<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_config_settings_view_form">
      <field name="name">res.config.settings.view.form.inherit.sale</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="10"/>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]" position="inside">
          <div class="app_settings_block" data-string="Agricultura" string="Agricultura" data-key="agro_fres">

            <h2>Recepción de Inventario</h2>
            <div class="row mt16 o_settings_container">

              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                    <span class="o_form_label">Compañia</span>
                    <div class="text-muted">
                      Compañia responsable de las operaciones
                    </div>
                    <div class="row mt16">
                        <label for="partner_id" string="Compañia" class="col-lg-4 o_light_label"/>
                        <field name="partner_id" class="oe_inline"/>
                    </div>
                </div>
              </div>

              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_right_pane">
                    <span class="o_form_label">Ubicación</span>
                    <div class="text-muted">
                      Ubicación destino para las recepciones de inventario
                    </div>
                    <div class="row mt16">
                        <label for="location_id" string="Ubicación destino" class="col-lg-4 o_light_label"/>
                        <field name="location_id" class="oe_inline"/>
                    </div>
                </div>
              </div>

            </div>
          </div>
        </xpath>
      </field>
    </record>

    <record model="ir.actions.act_window" id="agro_settings_action_window">
      <field name="name">Configuración AgroFres</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">res.config.settings</field>
      <field name="view_id" ref="res_config_settings_view_form"/>
      <field name="view_mode">form</field>
      <field name="target">inline</field>
      <field name="context">{'module': 'agro_fres'}</field>
    </record>

    <menuitem
    id="agro_settings_menu"
    name="Configuración"
    parent="agro_menu_root"
    sequence="30"/>

    <menuitem
    id="agro_settings_submenu"
    name="Ajustes"
    parent="agro_settings_menu"
    action="agro_settings_action_window"
    sequence="1"/>
    
</odoo>